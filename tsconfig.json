{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@api/*": [
                "api/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@data/*": [
                "data/*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@types/*": [
                "types/*"
            ],
            "@routes/*": [
                "routes/*"
            ]
        },
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "declaration.d.ts",
        "index.tsx"
    ]
}